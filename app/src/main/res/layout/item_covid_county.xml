<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical"
    android:background="@drawable/bg_adapter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="จังหวัด : "
            android:textColor="@color/black"
            android:textSize="18dp"
            android:fontFamily="@font/itim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvCname"
            android:text="จังหวัด"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:fontFamily="@font/itim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="ผู้ติดเชื้อใหม่ : "
            android:textColor="@color/black"
            android:textSize="18dp"
            android:fontFamily="@font/itim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvCnewCase"
            android:text="ใหม่"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:fontFamily="@font/itim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="ผู้ติดเชื้อสะสม : "
            android:textColor="@color/black"
            android:textSize="18dp"
            android:fontFamily="@font/itim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvCtotalCase"
            android:text="สะสม"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:fontFamily="@font/itim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="เสียชีวิตวันนี้ : "
            android:textColor="@color/black"
            android:textSize="18dp"
            android:fontFamily="@font/itim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvCdeath"
            android:text="ตาย"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:fontFamily="@font/itim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="เสียชีวิตสะสม : "
            android:textColor="@color/black"
            android:textSize="18dp"
            android:fontFamily="@font/itim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvCdeathAll"
            android:text="ตายรวม"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:fontFamily="@font/itim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>





</LinearLayout>