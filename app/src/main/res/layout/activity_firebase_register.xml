<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".activity.FirebaseRegisterActivity">

    <LinearLayout
        android:id="@+id/LiNear0"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/bg_main_linear"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="173dp"
            android:layout_height="125dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/splash_animation" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LiNear1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LiNear0"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-80dp"
        android:background="@drawable/bg_linear"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/TextViewLogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/itim"
            android:text="สมัครสมาชิก"
            android:textAlignment="center"
            android:textSize="25dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:hint="ชื่อ-สกุล"
                android:theme="@style/fontItim"
                app:counterEnabled="true"
                app:counterMaxLength="30"
                app:endIconDrawable="@drawable/checked"
                app:helperText="Required*"
                app:helperTextEnabled="true"
                app:helperTextTextColor="@color/red"
                app:startIconDrawable="@drawable/name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/RegisterName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/itim"
                    android:inputType="text"
                    android:maxLength="30"
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:hint="อีเมล"
                android:theme="@style/fontItim"
                app:counterEnabled="true"
                app:counterMaxLength="30"
                app:endIconDrawable="@drawable/checked"
                app:helperText="Required*"
                app:helperTextEnabled="true"
                app:helperTextTextColor="@color/red"
                app:startIconDrawable="@drawable/email">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/RegisterEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/itim"
                    android:inputType="textEmailAddress"
                    android:maxLength="30"
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:hint="รหัสผ่าน"
                android:theme="@style/fontItim"
                app:counterEnabled="true"
                app:counterMaxLength="20"
                app:endIconDrawable="@drawable/checked"
                app:helperText="Required*"
                app:helperTextEnabled="true"
                app:helperTextTextColor="@color/red"
                app:startIconDrawable="@drawable/unlock">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/RegisterPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/itim"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:hint="ที่อยู่"
                android:theme="@style/fontItim"
                app:counterEnabled="true"
                app:counterMaxLength="60"
                app:endIconDrawable="@drawable/checked"
                app:helperText="Required*"
                app:helperTextEnabled="true"
                app:helperTextTextColor="@color/red"
                app:startIconDrawable="@drawable/home">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/RegisterAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/itim"
                    android:maxLength="60"
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:hint="เบอร์"
                android:theme="@style/fontItim"
                app:counterEnabled="true"
                app:counterMaxLength="10"
                app:endIconDrawable="@drawable/checked"
                app:helperText="Required*"
                app:helperTextEnabled="true"
                app:helperTextTextColor="@color/red"
                app:startIconDrawable="@drawable/phone_call">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/RegisterPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/itim"
                    android:maxLength="10"
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/singUpBtn"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_login1"
                android:fontFamily="@font/itim"
                android:textColor="@color/white"
                android:text="สมัครสมาชิก/Register"
                android:textSize="18dp" />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="10dp"
            android:layerType="software"
            android:src="@drawable/obj_br" />

        <TextView
            android:id="@+id/NewRegisterText"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/itim"
            android:text="คุณมีบัญชีเเล้วใช่หรือไม่ ?"
            android:textAlignment="center"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/NewRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/itim"
            android:text="เข้าสู่ระบบ/Login"
            android:textAlignment="center"
            android:textColor="@color/green"
            android:textSize="16dp" />

    </LinearLayout>
</RelativeLayout>